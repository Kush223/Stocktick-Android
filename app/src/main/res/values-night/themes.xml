<resources>
    <!-- Base application theme. -->
    <style name="Theme.Stocktick" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#404040</item>
        <item name="android:navigationBarColor">@color/color_background</item>

    </style>


    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
    <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
    <!-- Customize your theme here. -->


    <!--    Login/signUp THEME+ CREATE ACCOUNT THEME-->

    <!--Login signup text view - CREATE ACCOUNT text view-->
    <style name="login_signup">
        <item name="android:textSize">
            21sp
        </item>
        <item name="android:textColor">
            @color/white_FFFFFF
        </item>
    </style>
    <!--    Hello welcome to account textview- Trust is investment text view-->
    <style name="hello_welcome">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/white_FFFFFF
        </item>
    </style>
    <!--    PHONE NUMBER - EMAIL ADDRESS textview theme -->
    <style name="phone_number">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/background_light_text
        </item>
    </style>
    <!--    Request OTP-->
    <style name="request_otp">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>

    <!--    OTP styles-->
    <style name="otp">

        <item name="android:textSize">
            25sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>

    <style name="verification_code">

        <item name="android:textSize">
            26sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>
</resources>