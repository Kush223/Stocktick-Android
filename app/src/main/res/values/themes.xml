<resources>
    <!-- Base application theme. -->
    <!--    https://stackoverflow.com/questions/22192291/how-to-change-the-status-bar-color-in-android-->
    <style name="Theme.Stocktick" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_000000</item>
        <item name="colorPrimaryVariant">@color/button_canvas</item>
        <item name="colorOnPrimary">@color/button_canvas</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_canvas</item>
        <item name="colorSecondaryVariant">@color/button_canvas</item>
        <item name="colorOnSecondary">@color/button_canvas</item>

    </style>

    <!--    Login/signUp THEME+ CREATE ACCOUNT THEME-->

    <!--Login signup text view - CREATE ACCOUNT text view-->
    <style name="login_signup">
        <item name="android:textSize">
            21sp
        </item>
        <item name="android:textColor">
            @color/white_FFFFFF
        </item>
    </style>
    <!--    Hello welcome to account textview- Trust is investment text view-->
    <style name="hello_welcome">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            @color/white_FFFFFF
        </item>
    </style>
    <!--    PHONE NUMBER - EMAIL ADDRESS textview theme -->
    <style name="phone_number">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/background_light_text
        </item>
    </style>
    <!--    Request OTP-->
    <style name="request_otp">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>

    <!--    OTP styles-->
    <style name="otp">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>

    <style name="verification_code">

        <item name="android:textSize">
            26sp
        </item>

        <item name="android:textColor">
            @color/white_FFFFFF
        </item>

    </style>


</resources>