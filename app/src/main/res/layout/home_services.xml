<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="220dp"
    app:cardBackgroundColor="#222222"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:neumorph_shadowColorDark="@color/canvas_background"
    app:neumorph_shadowColorLight="#505050"
    app:neumorph_shadowElevation="2dp"
    app:neumorph_shapeType="flat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:src="@drawable/liquidity_home" />

        <TextView
            android:id="@+id/service_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="ssfds\n ghfhfffgfhfjfjgfjjgffg"
            android:textColor="#909090"
            android:layout_marginTop="13dp"
            android:textSize="14sp" />

    </LinearLayout>

</soup.neumorphism.NeumorphCardView>