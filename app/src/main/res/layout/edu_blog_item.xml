<?xml version="1.0" encoding="utf-8"?><!--&lt;!&ndash;Blog cards- -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingTop="5dp"
    android:paddingEnd="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/edu_blog_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp">
        <!--blogs text layout-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/blog_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/education_blog_placeholder_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/blog_short_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="13dp"
                android:fontFamily="sans-serif"
                android:text="Stocks Going Up"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/blog_long_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="13dp"
                android:text="19 Feb 2022"
                android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>