<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#212121"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loan_form_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/Name"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/loan_form_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_name"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/email_heading"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/loan_form_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/phone_heading"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/loan_form_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_enter_phone_number"
                android:inputType="phone"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/business_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/business_heading"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/business_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardCornerRadius="7dp">

            <EditText
                android:id="@+id/loan_form_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_hint"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:paddingRight="11dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/loan_form_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="38dp"
            app:cardBackgroundColor="#FFC400"
            app:cardCornerRadius="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>
