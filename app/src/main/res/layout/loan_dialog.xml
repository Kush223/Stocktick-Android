<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#212121">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/loan_form_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:text="@string/Name"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/enter_name"
                android:id="@+id/loan_form_name"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_heading"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/email_hint"
                android:paddingTop="7dp"
                app:backgroundTint="#C4C4C4"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_email"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_heading"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/login_enter_phone_number"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:inputType="phone"
                app:backgroundTint="#C4C4C4"
                android:id="@+id/loan_form_phone"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_heading"
            android:id="@+id/business_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/business_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/business_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_business"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacture_year_heading"
            android:id="@+id/manufacture_year_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/manufacture_year_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/manufacture_year_heading"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:inputType="date"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_manufacture_year"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policy_heading"
            android:id="@+id/policy_claim_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/policy_claim_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/policy_claim_radio"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/loan_form_policy_claim_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/yes"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4"/>
                <RadioButton android:id="@+id/loan_form_policy_claim_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/no"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4" />
            </RadioGroup>


        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_heading"
            android:id="@+id/vehicle_no_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/vehicle_no_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/vehicle_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_vehicle_no"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_heading"
            android:id="@+id/manufacture_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/manufacture_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:id="@+id/loan_form_manufacture"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model_heading"
            android:id="@+id/model_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/model_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/model_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_model"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fuel_type_heading"
            android:id="@+id/fuel_type_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/fuel_type_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:id="@+id/loan_form_fuel_type"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/variant_heading"
            android:id="@+id/variant_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/variant_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/variant_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_variant"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insurer_heading"
            android:id="@+id/insurer_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/insurer_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/insurer_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_insurer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/puc_heading"
            android:id="@+id/puc_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/puc_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/puc_radio"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/loan_form_puc_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/yes"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4"/>
                <RadioButton android:id="@+id/loan_form_puc_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/no"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4" />
            </RadioGroup>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/puc_exp_heading"
            android:id="@+id/puc_exp_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/puc_exp_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/puc_exp_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:inputType="date"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_puc_exp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ownership_transfer_heading"
            android:id="@+id/ownership_transfer_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/ownership_transfer_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ownership_radio"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/loan_form_ownership_transfer_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/yes"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4"/>
                <RadioButton android:id="@+id/loan_form_ownership_transfer_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/no"
                    android:paddingTop="7dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    app:backgroundTint="#C4C4C4" />
            </RadioGroup>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policy_type_heading"
            android:id="@+id/policy_type_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/policy_type_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/policy_type_hint"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_policy_type"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policy_exp_heading"
            android:id="@+id/policy_exp_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C4"
            android:id="@+id/policy_exp_card"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="7dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/policy_exp_hint"
                android:inputType="date"
                app:backgroundTint="#C4C4C4"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/loan_form_policy_exp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFC400"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="20dp"
            android:id="@+id/loan_form_submit"
            app:cardCornerRadius="7dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/submit"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
</androidx.cardview.widget.CardView>
