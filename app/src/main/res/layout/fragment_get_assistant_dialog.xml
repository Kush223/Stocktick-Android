<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.get_assistant.GetAssistantDialog">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="500dp"
        android:orientation="vertical"
        android:id="@+id/mainLayout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="GET ASSISTANT"
            android:id="@+id/header"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"

            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="@+id/header"
            android:layout_marginTop="10dp"
            android:text="Please fill out the form below and we will get back to you as soon as possible."
            android:textSize="15sp"
            android:textColor="@color/secondary_text_color"
            android:layout_marginStart="20dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:layout_marginStart="23dp"

            />

        <EditText
            android:id="@+id/etName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:hint="Name"
            android:textSize="15sp"
            android:layout_marginStart="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:layout_marginStart="23dp"
            />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"

            android:hint="Email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGE"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:layout_marginStart="23dp"
            />
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"

            android:hint="Message"/>



        <soup.neumorphism.NeumorphButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btSubmit"
            android:layout_marginTop="15dp"
            app:neumorph_shadowColorLight="#333333"
            app:neumorph_shadowColorDark="#131313"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="#4A4A4A"
            style="@style/Widget.Neumorph.Button"
            android:layout_below="@+id/mainLayout"
            app:neumorph_shadowElevation="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"

            />


    </androidx.appcompat.widget.LinearLayoutCompat>




</FrameLayout>