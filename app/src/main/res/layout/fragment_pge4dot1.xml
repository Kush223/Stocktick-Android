<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mutual_funds.stressed_about_finance.fragments.Page4dot1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Net-worth History"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.anychart.AnyChartView
                android:id="@+id/anyLineChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.21" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.58880776" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="393dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F. Year"
                android:textSize="20sp"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintBottom_toTopOf="@+id/hg1"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASSETS"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/vg1"
                app:layout_constraintEnd_toStartOf="@+id/vg2"
                app:layout_constraintBottom_toTopOf="@id/hg1"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIABILITIES"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/vg2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/hg1"
                android:textSize="20sp"
                />
<!--             Years-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-22"
                android:id="@+id/year1"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintTop_toBottomOf="@id/hg1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-21"
                android:id="@+id/year2"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintTop_toBottomOf="@id/year1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                android:layout_marginTop="28dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-21"
                android:id="@+id/year3"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintTop_toBottomOf="@id/year2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                android:layout_marginTop="28dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-21"
                android:id="@+id/year4"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintTop_toBottomOf="@id/year3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                android:layout_marginTop="28dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-21"
                android:id="@+id/year5"
                android:textColor="@color/secondary_text_color"
                app:layout_constraintTop_toBottomOf="@id/year4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vg1"
                android:layout_marginTop="28dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/year5"
                />

<!--            Asset Edit Texts-->
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etAssetYear1"
                app:layout_constraintStart_toEndOf="@id/vg1"
                app:layout_constraintTop_toTopOf="@id/year1"
                app:layout_constraintBottom_toBottomOf="@id/year1"
                app:layout_constraintEnd_toStartOf="@id/vg2"
                android:hint="In Rupees"
                android:inputType="number"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etAssetYear2"
                app:layout_constraintStart_toEndOf="@id/vg1"
                app:layout_constraintTop_toTopOf="@id/year2"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@id/year2"
                app:layout_constraintEnd_toStartOf="@id/vg2"
                android:hint="In Rupees"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etAssetYear3"
                app:layout_constraintStart_toEndOf="@id/vg1"
                app:layout_constraintTop_toTopOf="@id/year3"
                app:layout_constraintBottom_toBottomOf="@id/year3"
                app:layout_constraintEnd_toStartOf="@id/vg2"
                android:hint="In Rupees"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etAssetYear4"
                app:layout_constraintStart_toEndOf="@id/vg1"
                app:layout_constraintTop_toTopOf="@id/year4"
                app:layout_constraintBottom_toBottomOf="@id/year4"
                app:layout_constraintEnd_toStartOf="@id/vg2"
                android:inputType="number"
                android:hint="In Rupees"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etAssetYear5"
                app:layout_constraintStart_toEndOf="@id/vg1"
                app:layout_constraintTop_toTopOf="@id/year5"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@id/year5"
                app:layout_constraintEnd_toStartOf="@id/vg2"
                android:hint="In Rupees"
                android:textAlignment="center"
                />

<!--            Liabilities edit texts-->

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etLiaYear1"
                app:layout_constraintTop_toTopOf="@id/year1"
                app:layout_constraintBottom_toBottomOf="@id/year1"
                app:layout_constraintStart_toEndOf="@id/vg2"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="In Rupees"
                android:textAlignment="center"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etLiaYear2"
                app:layout_constraintTop_toTopOf="@id/year2"
                app:layout_constraintBottom_toBottomOf="@id/year2"
                app:layout_constraintStart_toEndOf="@id/vg2"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="In Rupees"
                android:textAlignment="center"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etLiaYear3"
                app:layout_constraintTop_toTopOf="@id/year3"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@id/year3"
                app:layout_constraintStart_toEndOf="@id/vg2"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="In Rupees"
                android:textAlignment="center"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/etLiaYear4"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="@id/year4"
                app:layout_constraintBottom_toBottomOf="@id/year4"
                app:layout_constraintStart_toEndOf="@id/vg2"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="In Rupees"
                android:textAlignment="center"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etLiaYear5"
                app:layout_constraintTop_toTopOf="@id/year5"
                app:layout_constraintBottom_toBottomOf="@id/year5"
                app:layout_constraintStart_toEndOf="@id/vg2"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="In Rupees"
                android:textAlignment="center"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <soup.neumorphism.NeumorphButton
        android:id="@+id/btNext"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btSkip"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#131313"
        app:neumorph_shadowColorLight="@color/color_background"
        app:neumorph_shadowElevation="10dp"
        app:neumorph_shapeType="flat"
        app:neumorph_backgroundColor="#303030" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btSkip"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btNext"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#131313"
        app:neumorph_shadowColorLight="@color/color_background"
        app:neumorph_shadowElevation="10dp"
        app:neumorph_shapeType="flat"
        app:neumorph_backgroundColor="#303030"/>


</androidx.constraintlayout.widget.ConstraintLayout>