<?xml version="1.0" encoding="utf-8"?>
<!--TODO () remove hardcoded width and heights-->
<!--TODO() fix country picker using fragment login otp-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_account_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".LoginSignup.LoginFragment">

    <!-- Create an account TextView-->
    <LinearLayout
        android:id="@+id/create_account_canvas1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/canvas_background"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Create an account -->
        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="75dp"
            android:gravity="top"
            android:text="Create an account"
            android:textAppearance="@style/login_signup" />
        <!--        Trust is the greatest investment-->
        <TextView
            android:id="@+id/tv_create_account_trust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:text="Trust is the greatest investment"
            android:textAppearance="@style/hello_welcome" />

        <!--contains heading and the edit text as a single layout-->
        <LinearLayout
            android:id="@+id/create_account_canvas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Email Address -->
            <TextView
                android:id="@+id/tv_create_accounnt_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="76dp"
                android:gravity="top"
                android:text="EMAIL ADDRESS"
                android:textAppearance="@style/phone_number" />
            <!--Email address edit text-->
            <EditText
                android:id="@+id/et_create_account_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                android:padding="14dp"
                android:background="@drawable/create_account_et"
                android:fontFamily="sans-serif"
                android:hint="@string/create_account_hint_enter_email_address"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:textColorHint="#A5A5A5" />
            <!--Phone number -->
            <TextView
                android:id="@+id/tv_create_accounnt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="44dp"
                android:gravity="top"
                android:text="@string/phone_number"
                android:textAppearance="@style/phone_number" />

            <LinearLayout
                android:id="@+id/create_account_phone_number_canvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/create_account_et"
                android:orientation="horizontal">
                <!--        link for xml attr to ccp - https://github.com/hbb20/CountryCodePickerProject/wiki/XML-Properties-->

                <!--put canvas colour as background later-->
                <com.hbb20.CountryCodePicker
                    android:id="@+id/create_account_country_code_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_defaultLanguage="ENGLISH"
                    app:ccp_flagBorderColor="@color/black_000000"
                    app:ccp_showFlag="false"
                    android:paddingTop="2dp"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="16sp" />
                <View
                    android:id="@+id/et_login_divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02"
                    android:background="@color/black_000000" />

                <EditText
                    android:id="@+id/et_login_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="@string/login_enter_phone_number"
                    android:inputType="phone"
                    android:textColorHint="@color/gray_A5A5A5" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_login_request_otp"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/fragment_login_bt_submit_phone"
                android:text="@string/request_otp"
                android:textAppearance="@style/request_otp"
                android:textColor="@color/white_FFFFFF"
                android:textSize="22sp"
                app:layout_constraintBaseline_toBottomOf="@id/phone_card"
                app:layout_constraintTop_toBottomOf="@id/et_login_phone_number" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>