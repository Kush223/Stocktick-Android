<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".LoginSignup.LoginFragment">

    <!-- Create an account TextView-->
    <LinearLayout
        android:id="@+id/create_account_canvas1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Create an account -->
        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="75dp"
            android:gravity="top"
            android:text="Create an account"
            android:textAppearance="@style/login_signup" />
        <!--        Trust is the greatest investment-->
        <TextView
            android:id="@+id/tv_create_account_trust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:text="Trust is the greatest investment"
            android:textAppearance="@style/hello_welcome" />

        <!--contains heading and the edit text as a single layout-->
        <LinearLayout
            android:id="@+id/create_account_canvas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Email Address -->
            <TextView
                android:id="@+id/tv_create_accounnt_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="78dp"
                android:gravity="top"
                android:text="EMAIL ADDRESS"
                android:textAppearance="@style/phone_number" />
            <!--Email address edit text-->
            <EditText
                android:id="@+id/et_create_account_email_address"
                android:layout_width="349dp"
                android:layout_height="46dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/create_account_et"
                android:fontFamily="sans-serif"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:textColorHint="#A5A5A5" />
            <!--Phone number -->
            <TextView
                android:id="@+id/tv_create_accounnt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="44dp"
                android:gravity="top"
                android:text="PHONE NUMBER"
                android:textAppearance="@style/phone_number" />
            <!--Email address edit text-->
            <EditText
                android:id="@+id/et_create_account_phone_number"
                android:layout_width="349dp"
                android:layout_height="46dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/create_account_et"
                android:fontFamily="sans-serif"
                android:hint="Enter phone number"
                android:inputType="number"
                android:textColorHint="#A5A5A5" />

        <Button
            android:id="@+id/bt_login_request_otp"
            android:layout_width="351dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/fragment_login_bt_submit_phone"
            android:text="@string/request_otp"
            android:textAppearance="@style/request_otp"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintBaseline_toBottomOf="@id/phone_card"
            app:layout_constraintTop_toBottomOf="@id/et_login_phone_number" />
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>