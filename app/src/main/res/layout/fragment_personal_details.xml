<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mutual_funds.asset_recorder.static_pages.personal_details.PersonalDetailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Name"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvName"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Current Location"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvLocation"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Mobile Number"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvMobileNo"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Email Id"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvEmailId"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Date of Birth"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvDOB"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Blood Group"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvBloodGroup"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />

            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "Emergency contact-"
                android:textAllCaps="true"
                android:textSize = "16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/secondary_text_color"
                />

            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Name"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvEmName"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Address"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvEmAddress"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />

            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "10dp"
                android:text = "Telephone"
                android:textColor = "@color/secondary_text_color"
                />
            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/tvEmTelephone"
                android:text = "NOT ENTERED"
                android:textAllCaps="true"
                android:textSize = "16sp"
                />


        </LinearLayout>

    </ScrollView>
    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_edit"
        app:neumorph_backgroundColor="#303030"
        app:neumorph_shadowColorDark="#131313"
        app:neumorph_shadowColorLight="@color/color_background"
        app:neumorph_shadowElevation="10dp"
        app:neumorph_shapeType="flat" />

</RelativeLayout>