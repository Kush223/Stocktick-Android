<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background"
    android:clipChildren="false"
    tools:context=".ui.profile.EditProfile">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="150dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/profile_placeholder" />
            </androidx.cardview.widget.CardView>

            <com.example.stocktick.ui.customviews.NeumorphEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/etName"
                app:hint="Name"
                app:inputType="string"
                app:layout_constraintBottom_toBottomOf="@+id/tvGold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGold"
                app:prefix=""
                app:usePrefix="true" />
            <com.example.stocktick.ui.customviews.NeumorphEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Email"
                android:id="@+id/etEmail"
                app:inputType="string"
                app:layout_constraintBottom_toBottomOf="@+id/tvGold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGold"
                app:prefix=""
                app:usePrefix="true" />
            <com.example.stocktick.ui.customviews.NeumorphEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Phone no."
                app:inputType="number"
                android:id="@+id/etPhoneNo"
                app:layout_constraintBottom_toBottomOf="@+id/tvGold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvGold"
                app:prefix=""
                app:usePrefix="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                >
                <soup.neumorphism.NeumorphCardView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailCard"
                    app:layout_constraintEnd_toStartOf="@+id/genderCard"
                    app:neumorph_shadowColorDark="#131313"
                    app:neumorph_shadowColorLight="@color/color_background"
                    app:neumorph_shadowElevation="10dp"
                    app:neumorph_backgroundColor="#303030"
                    app:neumorph_shapeType="flat"

                    android:layout_weight="1"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    >
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/gender"
                        android:dropDownWidth="wrap_content"
                        android:layout_marginStart="10dp"
                        />
                </soup.neumorphism.NeumorphCardView>
                <com.example.stocktick.ui.customviews.NeumorphEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hint="Age"
                    app:inputType="number"
                    android:id="@+id/etAge"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="@+id/tvGold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvGold"
                    app:prefix=""
                    app:usePrefix="true" />

            </LinearLayout>




            <soup.neumorphism.NeumorphButton
                android:id="@+id/submitBtn"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Submit"

                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                app:neumorph_shadowColorDark="#131313"
                app:neumorph_shadowColorLight="@color/color_background"
                app:neumorph_shadowElevation="10dp"
                app:neumorph_shapeType="flat"
                app:neumorph_backgroundColor="@color/on_background"
                app:neumorph_strokeColor="@color/white" />

        </LinearLayout>


</ScrollView>