    <!--    WORKAROUND FOR MUKESH SOLANKIS PIN VIEW https://github.com/mukeshsolanki/android-otpview-pinview/issues/39-->
    <style name="Theme.Stocktick" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!--        <item name="android:statusBarColor">@color/black_000000</item>-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_000000</item>
        <item name="colorPrimaryVariant">@color/button_canvas</item>
        <item name="colorOnPrimary">@color/button_canvas</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_canvas</item>
        <item name="colorSecondaryVariant">@color/button_canvas</item>
        <item name="colorOnSecondary">@color/button_canvas</item>
        <!--        <item name="android:statusBarColor">@color/button_canvas</item>-->

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

